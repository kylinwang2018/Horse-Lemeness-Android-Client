<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <VideoView
            android:id="@+id/normalVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:onClick="setNormalVideo"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/normalCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="setNormalVideo"
            android:src="@drawable/normal_cover"
            android:contentDescription=""
            />

        <VideoView
            android:id="@+id/frontVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:onClick="setFrontVideo"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/frontCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="setFrontVideo"
            android:src="@drawable/front_cover"
            android:contentDescription=""
            />

        <VideoView
            android:id="@+id/rearVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:onClick="setRearVideo"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/rearCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="setRearVideo"
            android:src="@drawable/rear_cover"
            android:contentDescription=""
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>